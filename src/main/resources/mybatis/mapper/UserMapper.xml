<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.luban.mapper.UserMapper">

    <!-- 开启二级缓存 -->
    <cache></cache>

    <insert id="addUser">
        insert into user (name, age) values (#{name},#{age})
    </insert>

    <update id="setName">
        update user set name = #{name} where id = #{id}
    </update>

    <delete id="deleteUserById">
        delete from user where id = #{id}
    </delete>

    <select id="selectUserById" resultType="mybatis.luban.model.UserDO">
<!--    <select id="selectUserById" resultType="mybatis.luban.model.UserDO" flushCache="true">-->
        select * from User where id = #{id}
    </select>
    <select id="selectUserById2" resultType="mybatis.luban.model.UserDO">
        select * from User where id = #{id}
    </select>

    <select id="selectUserByNameOrAge" resultType="mybatis.luban.model.UserDO">
        select * from User where name = #{arg0} or age = #{param2}
    </select>

    <select id="selectUserByNameOrAge2" resultType="mybatis.luban.model.UserDO">
        select * from User where name = #{name} or age = #{param2}
    </select>

    <select id="selectUserByUser" resultType="mybatis.luban.model.UserDO">
        select * from User where name = #{name} or age = #{arg1.age}
    </select>
    <select id="selectBatchUser" resultType="mybatis.luban.model.UserDO">
        select * from User limit 5
    </select>
</mapper>